    <text>
        <body>
            <div type="transcript">
                <index>
                    <term>Universität Innsbruck</term>
                    <term>Philosophie</term>
                    <term>Klassische Philologie</term>
                    <term>Gehaltsfragen</term>
                    <term>Personalfragen</term>
